# Flask Configuration
APP_ENV=development
DEBUG=True
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production

# Database Configuration
# For development (SQLite):
DATABASE_URL=sqlite:///app.db
# For production (PostgreSQL):
# DATABASE_URL=postgresql://username:password@localhost:5432/form_builder_prod

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=604800

# Email Configuration (Required for password reset, notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@example.com

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Redis Configuration (Optional - improves performance)
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Performance Configuration
CACHE_DEFAULT_TIMEOUT=300

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Optional: External Services
# STRIPE_PUBLIC_KEY=pk_test_...
# STRIPE_SECRET_KEY=sk_test_...
# AWS_ACCESS_KEY_ID=...
# AWS_SECRET_ACCESS_KEY=...
# AWS_S3_BUCKET=...